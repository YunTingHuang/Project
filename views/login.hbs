<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/blueimp-md5/2.10.0/js/md5.min.js"></script>
</head>
<body style="background-color: lightsteelblue">
<div class="header" style="display: grid; grid-template-columns: repeat(12, 1fr); grid-template-rows: 50px; color: white; margin: 30px;">
    <div class="logo" style="margin: 5px; grid-column: span 12; text-align: center;">
        <a href="/login/" style="text-align: center; text-decoration: none; line-height: 20px;">
            <div class="logo_big" style="font-size: 3em; font-family: 'Bradley Hand ITC',monospace; font-weight: bold; color: white;">Node JS</div><br>
            <div class="logo_small" style="font-size: 1.1em; font-family: monospace; font-weight: bold; color: white;">O N L I N E - M A R K E T</div>
        </a>
    </div>
</div>
    <div class="container" style="margin-top:50px">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary" style="border-color: gray; font-family: monospace">
                <div class="panel-heading" style="border-color: white; background-color: gray; font-size: 1.2em; color: white">LOG IN</div>
                <div class="panel-body" style="border-color: white;">
                   <div class="form-horizontal">
                        <div class="form-group">
                            <label for="uname" class="col-sm-2 control-label">Username</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="username" id="usernameId" placeholder="Enter Username">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="pwd" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" name="password" id="passwordId" placeholder="Enter Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="pwd" class="col-sm-2 control-label"></label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="vcode" id="vcodeId" placeholder="Enter Verification Code">
                            </div>
                            <div class="col-sm-3">
                                <img id="vcodeimgId" src="/vcode">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button onclick="login();"  class="btn btn-default">Log In</button>
                                &nbsp;&nbsp;
                                <button onclick="register();"  class="btn btn-default">Sign Up</button>
                            </div>
                        </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    // Sign Up Page
    function register(){
        window.location.href = "/regist"
    }
    // Click to change code
    $("#vcodeimgId").click(function(){
        $("#vcodeimgId").attr('src',`/vcode?randomId=${Math.random()}`)
    });
    // Log in
    function login(){
        var username = $("#usernameId").val();
        var password = md5($("#passwordId").val()+"!@#ZZZ-_-"); //MD5 Hash Generator
        var vcode = $("#vcodeId").val();
        $.post('/login',{username,password,vcode},function(result){
            if(result.status !== 0){
                // Get Code
                $("#vcodeimgId").attr('src',`/vcode?randomId=${Math.random()}`);
                alert(result.message)
            }else{
                // Shopping Page
                window.location.href = "/?username="+username;
                window.sessionStorage.setItem('user',username);
            }
        })
    }
</script>
</html>