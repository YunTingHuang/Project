{{> header }}
<div class="container"><br>
    <h1 style="font-family: monospace; font-size: 1.2em; text-align: center">----- Your Shopping Cart -----</h1>
    {{# if products }}
        <div class="cart page" style="font-family: monospace;">
            <ul class="list-group">
                {{# each products }}
                <li class="list-group-item clearfix" style="margin-top: 10px">
                    <div class="col-xs-5">
                        <p style="font-size: 22px; margin-top: 5px">{{ this.item.title }}</p>
                        <p>{{{this.item.description}}}</p>
                    </div>
                    <div class="col-xs-2 text-right" style="margin-top: 5px">
                        <span class="badge">{{ this.quantity }}</span>
                    </div>
                    <div class="col-xs-3 text-right" style="margin-top: 5px">
                        {{ this.price }} CAD
                    </div>
                    <div class="col-xs-2 text-right" style="margin-top: 5px">
                        <a href="/remove/{{this.item.id}}" class="btn btn-default"></i>Remove</a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="text-right" style="font-family: monospace; color: dimgray">
            <strong>Total: {{ totalPrice }} CAD  =  {{ totalUsdPrice }} USD </strong>
        </div>
        <hr>
        <div class="text-right" style="font-family: monospace">
            <a href="javascript:checkout()" type="button" class="btn btn-success">Check Out</a>
        </div>
    {{ else }}
        <p style="text-align: center; margin: 80px; font-size: 18px; color: lightslategray; font-family: monospace"><br>Your shopping cart is empty!</p>
    {{/if}}
</div>
<script>
    function checkout() {
        if (confirm('Thanks for your purchase!')) {
            window.location.href = '/emptycart'
        }
    }
</script>